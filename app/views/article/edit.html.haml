/ Content Header (Page header)
%section.content-header
  %h1
    Редактирование статьи
    %small= "#{@article.name}"
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Главная
    %li
      %a{:href => "/admin/articles"} Статьи
    %li.active Редактирование статьи
/ Main content
%section.content
  .row
    .col-xs-12
      .box
        .box-header
          %h3.box-title Введите новые параметры
        / /.box-header
        .box.box-primary
          .box-header.with-border
            %h3.box-title Редактирование статьи
          / /.box-header
          / form start
          %form.rails-form{:role => "form", :model => "role", :type => "new", :action => "/admin/articles/form", :enctype => "multipart/form-data", :method => "post"}
            .box-body
              %input{:type => "hidden", :name => "id", :value => @article.id}
              .form-group
                %label{:for => "exampleInputEmail1"} Название
                %input#exampleInputEmail1.form-control{:placeholder => "Название", :type => "text", :name => "name", :value => @article.name}
              .form-group
                %label{:for => "exampleInputEmail1"}
                  Фото<br>
                  - if !@article.image.blank?
                    = image_tag @article.image.icon.url
                  <br>
                %input{:placeholder => "Фото", :type => "file", :name => "image"}
              .form-group
                %label{:for => "exampleInputEmail1"} Порядок
                %input#exampleInputEmail1.form-control{:placeholder => "Порядок", :type => "text", :name => "ord", :value => @article.ord}
              .form-group
                %label{:for => "exampleInputEmail1"} Короткий текст
                %textarea.form-control{:placeholder => "Короткий текст", :type => "text", :name => "short"}= @article.short
              .form-group
                %label{:for => "exampleInputEmail1"} Полный текст
                %textarea.form-control{:placeholder => "Полный текст", :type => "text", :name => "description"}= @article.description
              .form-group
                %label{:for => "exampleInputEmail1"} Url
                %input#exampleInputEmail1.form-control{:placeholder => "Url", :type => "text", :name => "url", :value => @article.url}
              .checkbox
                %label
                  - if @article.public == true
                    %input{:type => "checkbox", :name => "public", :checked => "checked"}
                      Активен
                  - else
                    %input{:type => "checkbox", :name => "public"}
                      Активен

              .form-group
                %label{:for => "exampleInputEmail1"} Meta title
                %input#exampleInputEmail1.form-control{:placeholder => "Meta title", :type => "text", :name => "meta_title", :value => @article.meta_title}
              .form-group
                %label{:for => "exampleInputEmail1"} Meta keywords
                %input#exampleInputEmail1.form-control{:placeholder => "Meta keywords", :type => "text", :name => "meta_keywords", :value => @article.meta_keywords}
              .form-group
                %label{:for => "exampleInputEmail1"} Meta description
                %textarea.form-control{:placeholder => "Полный текст", :type => "text", :name => "meta_description"}= @article.meta_description

              
            / /.box-body
            .box-footer
              %button.btn.btn-primary{:type => "submit"} Сохранить
        / /.box-body
      / /.box
/ /.content