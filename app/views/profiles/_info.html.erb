<div class="dr-header-span">
  <p class="dr-header-span-unmarked">
    <%= resource.user.first_name %> <%= resource.user.last_name %>
  </p>
  <div class="dr-master-profile-header-price">
    <%= render 'shared/task_price_type', profile: resource %>
  </div>
  <% if policy(resource).edit? %>
    <a href="<%= edit_profile_path(resource) %>" class="btn dr-button-empty">Редактировать анкету</a>
  <% end %>
</div>

<div class="row row-eq-height dr-master-profile-header-content">
  <div class="col-md-2 padding-none border-right">
    <div class="dr-one-ticket-ticket-avatar">
      <%= render 'shared/user_big_photo', user: resource.user %>
    </div>
    <br/>
    <div class="dr-all-masters-stars">
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
    </div>
    <div class="dr-one-ticket-ticket-rating">
      <br/>
      <br/>
      <span class="bold-text"><b>Рейтинг</b></span>
      <br/>
      <span class="bold-text-light">0</span>
    </div>
  </div>
  <div class="col-md-6 dr-one-ticket-ticket-content gray-text">
    <p>
      <%= simple_format resource.about %>
    </p>
  </div>
  <div class="col-md-4 padding-none">
    <div class="dr-one-ticket-refinement dr-all-task">
      <button type="button" class="btn dr-button-blueFull">Предложить персональное задание</button>
    </div>
    <%= render 'shared/task_working_info', profile: resource %>
  </div>
</div>
