/ Content Header (Page header)
%section.content-header
  %h1
    Редактирование объвления
    %small= "#{@product.name}"
  %ol.breadcrumb
    %li
      %a{:href => "/admin"}
        %i.fa.fa-dashboard
        Главная
    %li
      %a{:href => "/admin/products"} Объвления
    %li.active Редактирование объвления
/ Main content
%section.content
  .row
    .col-xs-12
      .box
        .box-header
          %h3.box-title Введите новые параметры
        / /.box-header
        .box.box-primary
          .box-header.with-border
            %h3.box-title Редактирование объвления
          / /.box-header
          / form start
          %form.rails-form{:role => "form", :model => "role", :type => "new", :action => "/admin/products/form", :enctype => "multipart/form-data", :method => "post"}
            .box-body
              %input{:type => "hidden", :name => "id", :value => @product.id}
              - if !@cats.blank?
                .form-group
                  %label Серия
                  %select.form-control.select{:name => "cat_id"}
                    %option
                    - @cats.each do |r|
                      - if r.id == @product.cat_id
                        %option{value: r.id, :selected => "selected"}= r.name
                      - else
                        %option{value: r.id}= r.name
              .form-group
                %label{:for => "exampleInputEmail1"} Название
                %input#exampleInputEmail1.form-control{:placeholder => "Название", :type => "text", :name => "name", :value => @product.name}
              .form-group
                %label{:for => "exampleInputEmail1"}
                  Фото<br>
                  - if !@product.image.blank?
                    = image_tag @product.image.icon.url
                  <br>
                %input{:placeholder => "Фото", :type => "file", :name => "image"}
              .form-group
                %label{:for => "exampleInputEmail1"} Порядок
                %input#exampleInputEmail1.form-control{:placeholder => "Порядок", :type => "text", :name => "ord", :value => @product.ord}
              .form-group
                %label{:for => "exampleInputEmail1"} Короткий текст
                %textarea.form-control{:placeholder => "Короткий текст", :type => "text", :name => "short"}= @product.short
              .form-group
                %label{:for => "exampleInputEmail1"} Телефон 1
                %input.form-control{:placeholder => "Телефон 1", :type => "text", :name => "phone1", :value => @product.phone1}
              .form-group
                %label{:for => "exampleInputEmail1"} Телефон 2
                %input.form-control{:placeholder => "Телефон 2", :type => "text", :name => "phone2", :value => @product.phone2}
              .form-group
                %label{:for => "exampleInputEmail1"} Стоимость
                %input.form-control{:placeholder => "Стоимость", :type => "text", :name => "price1", :value => @product.price1}
              .form-group
                %label{:for => "exampleInputEmail1"} Адрес
                %input.form-control{:placeholder => "Адрес", :type => "text", :name => "address", :value => @product.address}
