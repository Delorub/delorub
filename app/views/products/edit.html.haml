              .form-group
                %label{:for => "exampleInputEmail1"} Этаж
                %input.form-control{:placeholder => "Этаж", :type => "text", :name => "etag", :value => @product.etag}
              .form-group
                %label{:for => "exampleInputEmail1"} Полный текст
                %textarea.form-control{:placeholder => "Полный текст", :type => "text", :name => "description"}= @product.description
              .form-group
