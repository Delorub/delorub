<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="dr-block-style dr-block-style-registration">
    <div class="registration-form">
      <div class="registration-form__header">
        <p>Регистрация исполнителя</p>
      </div>
      <div class="registration-form__content">
        <div class="registration-form__content-header">
          <p>Авторизация через соцсети</p>
        </div>
        <div class="registration-form__content-circle">
          <a class="registration-form__content-circle__item registration-form__content-circle__item-vk" href="<%= omniauth_authorize_path(resource_name, :vkontakte) %>">VK</a>
          <a class="registration-form__content-circle__item registration-form__content-circle__item-fb" href="<%= omniauth_authorize_path(resource_name, :facebook) %>">FB</a>
          <a class="registration-form__content-circle__item registration-form__content-circle__item-ok" href="<%= omniauth_authorize_path(resource_name, :odnoklassniki) %>">OK</a>
        </div>
        <hr/>
        <div class="registration-form__content-inputs">
          <%= f.text_field :name, autofocus: true, class: 'form-control form-control__item', placeholder: 'Как к вам обращаться?' %>
          <%= f.email_field :email, class: 'form-control form-control__item', placeholder: 'Ваш email' %>
          <% if @omniauth %>
            <input type="hidden" name="omniauth_id" value="<%= @omniauth.id %>" />
          <% end %>
          <%= content_tag 'sms-confirmation',
            nil,
            'initial-value': f.object.phone,
            'input-name': "#{f.object_name}[phone]"
          %>
          <div class="checkbox">
            <label><input type="checkbox" value="">Я согласен с правилами сервиса</label>
          </div>
        </div>
        <div class="registration-form__content-button-submit">
          <input type="submit" class="btn btn-primary dr-btn-primary" value="Создать аккаунт" />
        </div>
      </div>
    </div>
  </div>
<% end %>
