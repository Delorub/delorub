    .profile-center{:style => "width:77%;"}
      .comment-profile{:style => "margin:24px 0 0 0px;"}
        %h3 Сообщения
        .profile-task
          - if @orders.blank?
            У вас нет сообщений
          - else
            - @orders.each do |t|
              - task = Task.where(id: t.task_id)
              - if t.user_id != @current_user.id
                - user = User.where(id: t.user_id)
              - else
                - user = User.where(id: t.userdo_id)
              .comment-item.comment-item-message
                - if !user.blank?
                  .comment-user
                    .user
                      .rating= user.first.rating.to_i
                      .img
                        - if !user.first.image.blank?
                          = image_tag user.first.image.big.url
                        - else
                          - if !user.first.photo.blank?
                            = image_tag user.first.photo
                      %a.name{:href => "/users/#{user.first.id}"} #{user.first.name1} #{user.first.name2}
                    .info
                      .counts
                        %span #{user.first.tasks.to_i} заЯВОК
                        .plus +#{user.first.plus.to_i}/
                        .minus -#{user.first.minus.to_i}
                        .clear
                      .clear
                - style = "width:662px;"
                .comemnt-text{:style => style}
                  .body
                    .text
                      - if !task.blank?
                        Переписка по задаче <a href="/tasks/#{task.first.id}">#{task.first.name}</a>
                    .clear
                  .btns
                    /%a.cancle{:href => ""} Отменить
                    - if !user.blank?
                      %a.btn.btn-blue{:href => "/profile/messages2/#{t.task_id}"} Перейти к диалогу
                    .clear
                .clear

