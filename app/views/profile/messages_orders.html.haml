      %span >
      %a{:href => "/profile"} Личный кабинет
      %span >
      %span Сообщения
      .clear
    .center-lk{:style => "margin-left:50px;"}
      = link_to "Сообщения личные", "/profile/messages"
      = link_to "Сообщения в заказах", "/profile/messages/orders", :class => "active"
      .clear
    .right
      .soc-block
        .settings
          = link_to "Настройки", "/profile/master/settings"
        .ords
          .count #{@order_top.size}
          = link_to "Заявки", "/profile/master/orders"
          .clear
        .message.active
          .count #{@message_top.size}
          = link_to "Сообщения", "/profile/master/messages"
          .clear
        .balance
          = link_to "Баланс: #{@current_user.balance.to_i}", "/profile/master/balance"
          .clear
        .clear
    .clear
