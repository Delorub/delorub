= content_for :seo_title do @category.settings.dig(:seo_title).present? ? @category.settings.dig(:seo_title) : @category.title end if @category
.regular-content
  .container
    = render 'breadcrumb'
    .row
      .col-lg-8
        .dr-block-style.dr-block-style--sort-padding
          .task-sort
            .row
              .col-md-6.col-xl-auto
                span
                  b
                    | Сортировать по:
              .col-md-6.col-xl-auto
                - new_order = order_direction_inverse(params[:order])
                = link_to @category.present? ? category_tasks_path(@category, order: new_order) : tasks_path(order: new_order), class: 'task-sort__link' do
                  ' Дате размещения
                  |
                  = content_tag(:i, '', class: "fa fa-caret-#{new_order == 'asc' ? 'down' : 'up'}")
        = render 'tasks'
      .col-lg-4.lg-hide
        = render 'categories'
    br/
    = render 'categories/description'
