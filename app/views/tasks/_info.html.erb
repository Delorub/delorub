<div class="dr-header-span">
  <p class="dr-header-span-unmarked"><%= resource.title %></p>
  <span class="dr-header-span-price"><%= resource.price_exact %> ₽</span>
  <% if policy(resource).edit? %>
    <a href="<%= edit_task_path(resource) %>" class="btn dr-button-blue">Редактировать задание</a>
  <% end %>
  <% if policy(resource).reply? %>
    <a href="" class="btn dr-button-blue">Откликнуться на задание</a>
  <% end %>
</div>
<div class="row dr-one-ticket">
  <div class="row row-eq-height margin-none">
    <div class="col-md-2 padding-none">
      <div class="dr-one-ticket-ticket-avatar">
        <%= render 'shared/user_photo', user: resource.user %>
      </div>
      <br/>
      <div class="dr-one-ticket-ticket-name">
        <p><%= resource.user.first_name %><br /><%= resource.user.last_name %></p>
      </div>
      <div class="dr-one-ticket-ticket-rating">
        <br/>
        <br/>
        <span class="gray-text-light">Рейтинг</span>
        <br/>
        <span class="bold-text-light">0</span>
      </div>
    </div>
    <% if resource.files.count.positive? %>
    <div class="col-md-4 dr-one-ticket-ticket-photo">
      <div class="row">
        <div class="col-md-12">
          <img src="<%= resource.files.first.file.big_preview.url %>" class="img-responsive" alt="">
        </div>
      </div>
      <div class="row">
        <% resource.files.each do |file| %>
          <div class="col-md-4">
            <img src="<%= file.file.preview.url %>" class="img-responsive" alt="">
          </div>
        <% end %>
      </div>
    </div>
    <% end %>
    <div class="col-md-<%= resource.files.count.positive? ? '4' : '8' %> dr-one-ticket-ticket-content gray-text">
      <p><%= simple_format resource.description %></p>
    </div>
    <div class="col-md-2 padding-none">
      <% if resource.date_type.actual? %>
        <div class="dr-one-ticket-refinement dr-all-task">
          <span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
          <p class="gray-text-light">Актуально<br/>до</p>
          <span><%= resource.decorate.date_actual_date %></span>
        </div>
        <div class="dr-one-ticket-refinement dr-all-task without-border">
          <span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span>
          <p class="gray-text-light">Удобное<br/>время</p>
          <span><%= resource.decorate.date_actual_time %></span>
        </div>
      <% end %>
      <% if resource.date_type.interval? %>
        <div class="dr-one-ticket-refinement dr-all-task">
          <span class="glyphicon glyphicon-hourglass" aria-hidden="true"></span>
          <p class="gray-text-light">Выполнить в период</p>
          <span><%= resource.decorate.date_interval_from_date %> – <%= resource.decorate.date_interval_to_date %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
